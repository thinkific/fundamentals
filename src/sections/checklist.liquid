<section class="checklist section-height__large
{% include 'section_utility_column_layout' %}" data-preview-item="checklist">
  <div class="checklist__container">
    <div class="checklist__wrapper">
      {% include 'section_headings' %}
      {% if section.blocks != empty %}
        <article class="section__content">
          <ul class="checklist__list section__body">
            {% for block in section.blocks %}
              <li class="checklist__list-item">
                <i class="fa {{ block.settings.item_icon }}"></i>
                <h4>{{ block.settings.item_name }}</h4>
              </li>
            {% endfor %}
          </ul>
        </article>
        {% endif %}
    </div>
  </div>
</section>

{% style %}

section.checklist {
  {% include 'section_style_column_layout' %}
  {% include 'section_style_heading_alignment' %}
  {% include 'section_style_heading_ornament' %}
}

{% endstyle %}

{% schema %}
{
  "label":"Checklist",
  "settings":[
    {
      "label":"Headings",
      "settings":[
        {
          "type":"text",
          "id":"heading",
          "label":"Heading",
          "default":"Checklist"
        },
        {
          "type":"text",
          "id":"subheading",
          "label":"Subheading",
          "default":"Include a list of items to support the central theme of your page. Bulleted lists are a great way to parse information into digestible pieces."
        }
      ]
    },
    {
      "label":"Layout",
      "settings":[
        {
          "type":"radio",
          "id":"column_layout",
          "label":"",
          "description":"",
          "default":"two-column",
          "options":[
            {
              "value":"one-column",
              "label":"One Column"
            },
            {
              "value":"two-column",
              "label":"Two Columns"
            }
          ]
        },
        {
          "type":"radio",
          "id":"heading_alignment",
          "label":"Alignment",
          "description":"",
          "default":"left",
          "options":[
            {
              "value":"left",
              "label":"Left"
            },
            {
              "value":"center",
              "label":"Center"
            },
            {
              "value":"right",
              "label":"Right"
            }
          ]
        },
        {
          "type":"radio",
          "id":"heading_order",
          "label":"Heading Order",
          "default":"normal",
          "options":[
            {
              "value":"normal",
              "label":"Normal"
            },
            {
              "value":"reverse",
              "label":"Reverse"
            }
          ]
        }
      ]
    }
  ],
  "blocks":{
    "label":"Add checklist item",
    "limit":10,
    "types":[
      {
        "type":"item",
        "label":"Checklist item",
        "settings":[
          {
            "type":"icon",
            "id":"item_icon",
            "label":"Icon",
            "default":"fa-check"
          },
          {
            "type":"text",
            "id":"item_name",
            "label":"Description"
          }
        ]
      }
    ],
    "defaults":[
      {
        "type":"item",
        "values":{
          "item_icon":"fa-check",
          "item_name":"Checklist"
        }
      },
      {
        "type":"item",
        "values":{
          "item_icon":"fa-check",
          "item_name":"Text length of individual points can be shorter or longer depending on your needs"
        }
      },
      {
        "type":"item",
        "values":{
          "item_icon":"fa-check",
          "item_name":"Text length of individual points can be shorter or longer depending on your needs"
        }
      },
      {
        "type":"item",
        "values":{
          "item_icon":"fa-check",
          "item_name":"Text length of individual points can be shorter or longer depending on your needs"
        }
      }
    ]
  }
}
{% endschema %}
