{% comment %}
  Site-wide meta tags. These will be on every page in the site
{% endcomment %}

<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-status-bar-style" content="black">
<link rel="apple-touch-icon" type="image/png" href="{{ theme.settings.site_favicon }}" />
<link rel="shortcut icon" type="image/x-icon" href="{{ theme.settings.site_favicon }}" />

{% for meta in page.meta %}
  {{ meta.tag }}
{% endfor %}

{% comment %}
  If you have a Google Site Verification Meta Tag, add it here
{% endcomment %}

{% if site.has_google_verification_meta_tag %}
  <meta name="google-site-verification" content="{{ site.google_verification_meta_tag }}">
{% endif %}

{% if page.seo_title != blank %}
  <title>{{ page.seo_title }}</title>
{% else %}
  <title>{{ site.name }}</title>
{% endif %}

{% if page.seo_description != blank %}
  <meta name="description" content="{{ page.seo_description }}">
{% endif %}

{% if page.keywords != blank %}
  <meta name="keywords" content="{{ page.keywords }}">
{% endif %}

